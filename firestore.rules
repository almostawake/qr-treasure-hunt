rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to hunts collection
    match /hunts/{huntId} {
      allow read, write: if true;
    }
    
    // Allow read and write access to clues collection
    match /clues/{clueId} {
      allow read, write: if true;
    }
  }
}