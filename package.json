{
  "name": "template-min",
  "version": "1.0.0",
  "scripts": {
    "install:all": "npm install && cd client && npm install",
    "build:all": "cd client && npm run build",
    "start:emulators": "firebase emulators:start --only firestore,storage --export-on-exit=emulator-data --import=emulator-data",
    "start:client": "cd client && npm run dev",
    "test:client": "cd client && npm run test",
    "deploy:prod": "npm run build:all && firebase --project qr-treasure-hunt deploy"
  },
  "devDependencies": {
    "firebase-tools": "^13.0.0"
  }
}
